<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_view_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/real"
        android:layout_height="50dp">

        <View
            android:id="@+id/view_line"
            android:layout_width="70dp"
            android:layout_height="7dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_bottom_sheet"
            android:layout_marginStart="165dp" />

        <TextView
            android:id="@+id/tv_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/back_sheet"
            android:layout_toRightOf="@id/back_sheet"
            android:text="@string/photo"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="10dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/back_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:src="@drawable/back" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/real"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tggtttg" />
    </LinearLayout>

</RelativeLayout>